# Life OS Agent Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Anthropic API Key
# =============================================================================
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# =============================================================================
# REQUIRED: Google Calendar OAuth Credentials
# =============================================================================
# Follow README.md instructions to create OAuth credentials in Google Cloud Console
# These files will be created after running `lifeos auth`
# GOOGLE_CREDENTIALS_FILE=credentials.json  # OAuth client secrets (from Google Console)
# GOOGLE_TOKEN_FILE=token.json              # Generated after first auth

# =============================================================================
# REQUIRED: Mem0 Configuration (Self-Hosted)
# =============================================================================
# Mem0 runs locally via Docker - see docker-compose.yml
MEM0_API_URL=http://localhost:8080
# If using Mem0 cloud instead (optional):
# MEM0_API_KEY=your-mem0-cloud-key

# =============================================================================
# OPTIONAL: Configuration
# =============================================================================
# Path to your life-os-config.yaml (defaults to ./config/life-os-config.yaml)
# LIFEOS_CONFIG_PATH=/path/to/your/config.yaml

# User identifier for memory isolation
LIFEOS_USER_ID=kevin

# LLM Model selection
LIFEOS_MODEL=claude-sonnet-4-20250514

# Logging level (DEBUG, INFO, WARNING, ERROR)
LIFEOS_LOG_LEVEL=INFO
